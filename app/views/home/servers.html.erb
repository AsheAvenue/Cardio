<div class="servers">
    <% @settings.servers.each do |key, server| %>
        <div class="server">
            <h2><%= server.name %></h2>
            <iframe src="https://rpm.newrelic.com/public/charts/<%= server.code %>" width="100%" height="38%" scrolling="no" frameborder="no"></iframe>
        </div>
    <% end %>
</div>

<% content_for :footer do %>
    <footer>
        <div class="buttons">
            <%= link_to "Back to #{@settings.name} Rollup", "/#{@slug}", :class => 'button' %>
            <%= link_to 'View @ New Relic', @settings.newrelic_url, :class => 'button', :target => '_blank' %>
        </div>
        <div class="title">
            <%= @settings.name %>
        </div>
    </footer>
<% end %>

