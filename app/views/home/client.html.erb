<% content_for :view do %>
    <div class="view">
        <a href="/"><div class="icon-grid"></div></a>
    </div>
<% end %>

<div class="rollup">
    <iframe src="https://rpm.newrelic.com/public/charts/<%= @settings.rollup %>" width="100%" height="88%" scrolling="no" frameborder="no"></iframe>
</div>

<% content_for :footer do %>
    <div class="buttons">
        <%= link_to 'View Servers', "/#{@slug}/servers", :class => 'button' %>   
        <%= link_to 'View @ New Relic', @settings.newrelic_url, :class => 'button', :target => '_blank' %>   
    </div>
    <div class="title">
        <%= @settings.name %>
    </div>
<% end %>

